{
  "name": "job-find-tracking-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Job Find Tracking application",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:chrome": "playwright test --project=chromium",
    "test:report": "playwright show-report",
    "test:smoke": "playwright test --grep @smoke",
    "test:prod": "ENVIRONMENT=production playwright test",
    "test:staging": "ENVIRONMENT=staging playwright test"
  },
  "keywords": ["e2e", "playwright", "testing"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^22.16.5",
    "dotenv": "^16.4.5"
  }
}
